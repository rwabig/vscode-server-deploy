server {
    listen 80;
    server_name {{ domain_name }};

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

# ---- SESSION TRACKING ZONE (Authelia manages sessions) ----
limit_req_zone $binary_remote_addr zone=session_limit:10m rate=30r/m;
limit_conn_zone $binary_remote_addr zone=session_conn:10m;

server {
    listen 443 ssl;
    http2 on;
    server_name {{ domain_name }};

    ssl_certificate /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ domain_name }}/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;

    # ------------------------------------------------------------
    # AUTHELIA AUTH GATE (UNIX SOCKET ONLY)
    # ------------------------------------------------------------
    location = /authelia/auth {
        internal;
        proxy_pass http://unix:/run/authelia/authelia.sock:/api/verify;
        proxy_set_header Content-Length "";
        proxy_set_header X-Original-URL $scheme://$host$request_uri;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Uri $request_uri;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Host $host;
        proxy_buffering off;
    }

    # ------------------------------------------------------------
    # AUTHELIA LOGIN PORTAL (UNIX SOCKET ONLY)
    # ------------------------------------------------------------
    location /authelia/ {
        proxy_pass http://unix:/run/authelia/authelia.sock:/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_buffering off;
    }

    # ------------------------------------------------------------
    # LOGOUT ENDPOINT
    # ------------------------------------------------------------
    location = /logout {
        return 302 /authelia/logout;
    }

    # ------------------------------------------------------------
    # MAIN APP (code-server)
    # ------------------------------------------------------------
    location / {
        auth_request /authelia/auth;
        error_page 401 =302 /authelia/?rd=$scheme://$host$request_uri;

        keepalive_timeout 1800s;
        proxy_read_timeout 1800s;
        proxy_send_timeout 1800s;

        proxy_pass http://code-server:8080;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        proxy_buffering off;
    }

    # ------------------------------------------------------------
    # Healthcheck (no auth)
    # ------------------------------------------------------------
    location = /.healthz {
        return 200 "ok\n";
        add_header Content-Type text/plain;
    }
}
